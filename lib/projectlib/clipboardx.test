# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    clipboardx.test
#
# AUTHOR:
#    Will Duquette
#
# DESCRIPTION:
#    Tcltest test suite for projectlib(n), clipboardx(n).
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Initialize tcltest(n)

if {[lsearch [namespace children] ::tcltest] == -1} {
    package require tcltest 2.2 
    eval ::tcltest::configure $argv
}
 
#-----------------------------------------------------------------------
# Load the package to be tested

package require projectlib 1.0

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::projectlib::test {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    # Import the code to be tested
    namespace import ::marsutil::*
    namespace import ::projectlib::*

    proc setup {} {
        clipboardx set A "aaaaa"
        clipboardx set B "bbbbb"
        clipboardx set C "ccccc"
    }

    proc cleanup {} {
        clipboardx clear
    }

    #-------------------------------------------------------------------
    # tags

    # tags is tested by the other tests.

    #-------------------------------------------------------------------
    # set

    test set-1.1 {can set tags} -setup {
        setup
    } -body {
        clipboardx tags
    } -cleanup {
        cleanup
    } -result {A B C}

    #-------------------------------------------------------------------
    # has

    test has-1.1 {can check for a tag} -setup {
        setup
    } -body {
        list \
            [clipboardx has A] \
            [clipboardx has B] \
            [clipboardx has C]
    } -cleanup {
        cleanup
    } -result {A B C}

    test has-1.2 {can get preferred} -setup {
        setup
    } -body {
        clipboardx has dummy1 B dummy2
    } -cleanup {
        cleanup
    } -result {B}

    test has-1.3 {empty string if no such tag} -setup {
        setup
    } -body {
        clipboardx has NONESUCH
    } -cleanup {
        cleanup
    } -result {}



    #-------------------------------------------------------------------
    # get

    test get-1.1 {can get data for tag} -setup {
        setup
    } -body {
            clipboardx get B
    } -cleanup {
        cleanup
    } -result {bbbbb}

    test get-1.2 {empty string if no such tag} -setup {
        setup
    } -body {
        clipboardx get NONESUCH
    } -cleanup {
        cleanup
    } -result {}

    #-------------------------------------------------------------------
    # clear

    test clear-1.1 {can clear clipboard} -setup {
        setup
    } -body {
        clipboardx clear
        clipboardx tags
    } -cleanup {
        cleanup
    } -result {}


    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::projectlib::test




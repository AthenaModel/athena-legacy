    } -body {
        ted notifier bind ::rdb <frcgroups>

        ted order FRCGROUP:UPDATE:MULTI {
            ids       BLUE 
            a         BOB
            color     "#ff0000"
            shape     NEUTRAL
            forcetype POLICE
            demeanor  AGGRESSIVE

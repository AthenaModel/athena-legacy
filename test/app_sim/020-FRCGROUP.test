    }


    test UPDATE-1.10 {invalid local} -setup {
        ted create BLUE
    } -body {
        ted order -reject FRCGROUP:UPDATE g BLUE local NONESUCH
    } -cleanup {
        cleanup
    } -result {
        local {invalid boolean "NONESUCH", should be one of: 1, 0, true, false, yes, no, on, off}
    }


    test UPDATE-2.1 {frcgroup is updated} -setup {
        ted create BOB BLUE
    } -body {
        ted order FRCGROUP:UPDATE {
            g            BLUE
            longname     "Blue Angels"
            a            BOB
            color        "#ff0000"
            shape        NEUTRAL
            forcetype    POLICE
            demeanor     AGGRESSIVE
            basepop      1500
            uniformed    no
            local        yes
        }

        ted query {SELECT * FROM frcgroups_view}
    } -cleanup {
        cleanup
    } -result {
g    longname    color   shape   symbol demeanor   basepop rel_entity gtype a   forcetype uniformed local 
---- ----------- ------- ------- ------ ---------- ------- ---------- ----- --- --------- --------- ----- 
BLUE Blue Angels #FF0000 NEUTRAL police AGGRESSIVE 1500    BOB        FRC   BOB POLICE    0         1     
    }


    test UPDATE-2.2 {table monitor event} -setup {
        ted create BLUE
    } -body {
        ted notifier bind ::rdb <frcgroups>
        ted order FRCGROUP:UPDATE g BLUE longname "Blue Angels"
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <frcgroups> update BLUE}
    }


    test UPDATE-3.1 {undo undoes the change} -setup {
        ted create BOB BLUE
        ted order FRCGROUP:UPDATE {
            g            BLUE
            longname     "Blue Angels"
            a            BOB
            color        "#ff0000"
            forcetype    POLICE
            demeanor     AGGRESSIVE
            basepop      1500
            local        yes
            uniformed    no
        }
    } -body {
        ted notifier bind ::rdb <frcgroups>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {

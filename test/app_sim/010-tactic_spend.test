# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    010-tactic_spend.test
#
# AUTHOR:
#    Will Duquette
#
# DESCRIPTION:
#    tactic_spend(sim) tests.
#
#    This test suite tests the tactic::SPEND ensemble.
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    # Set up for tests

    proc setup {} {
        ted create JOE BOB NB1 NB2 BLUE BRIT

        # Verify that unused columns contain NULL
        rdb nullvalue "@"
    }

    proc execute_setup {} {
        setup
        cash load
    }


    # Clean up after a test

    proc cleanup {} {
        # Clean up the test environment
        rdb nullvalue ""
        array unset parms
        ted cleanup
    }

    set T1 {
        tactic_type SPEND
        owner       JOE
        priority    top
        mode        ALL
        amount      ""
        goods       1
        black       0
        pop         1
        region      0
        world       0
        on_lock     NO
        once        NO
    }

    set T2 {
        tactic_type SPEND
        owner       JOE
        priority    top
        mode        SOME
        amount      1000.0
        goods       1
        black       0
        pop         1
        region      0
        world       0
        on_lock     NO
        once        NO
    }
    
    #-------------------------------------------------------------------
    # narrative

    test narrative-1.1 {Spend ALL} -setup {
        setup
        tactic mutate create $T1
    } -body {
        tactic::SPEND narrative [tactic get 1]
    } -cleanup {
        cleanup
    } -result {Spend all remaining cash-on-hand according to the following profile: goods: 50%; pop: 50%}

    test narrative-1.2 {Spend SOME} -setup {
        setup
        tactic mutate create $T2
    } -body {
        tactic::SPEND narrative [tactic get 1]
    } -cleanup {
        cleanup
    } -result {Spend 1,000.00 according to the following profile: goods: 50%; pop: 50%}

    #-------------------------------------------------------------------
    # check

    test check-1.1 {Nothing to check} -setup {
        setup
        tactic mutate create $T1
    } -body {
        tactic::SPEND check [tactic get 1]
    } -cleanup {
        cleanup
    } -result {}

    #-------------------------------------------------------------------
    # dollars

    test dollars-1.1 {dollars, ALL} -setup {
        setup
        tactic mutate create $T1
    } -body {
        tactic::SPEND dollars [tactic get 1]
    } -cleanup {
        cleanup
    } -result {?}

    test dollars-1.2 {dollars, SOME} -setup {
        setup
        tactic mutate create $T2
    } -body {
        tactic::SPEND dollars [tactic get 1]
    } -cleanup {
        cleanup
    } -result {1,000.00}

    #-------------------------------------------------------------------
    # execute

    test execute-1.1 {execute: SOME, insufficient funds} -setup {
        execute_setup
        tactic mutate create [dict merge $T2 {amount 20000.0}]
    } -body {
        tactic::SPEND execute [tactic get 1]
    } -cleanup {
        cleanup
    } -result {0}

    test execute-1.2 {execute: 1 on success} -setup {
        execute_setup
        tactic mutate create $T1
    } -body {
        tactic::SPEND execute [tactic get 1]
    } -cleanup {
        cleanup
    } -result {1}

    test execute-1.3 {execute: SOME, sufficent funds, expended} -setup {
        execute_setup
        tactic mutate create $T2
    } -body {
        tactic::SPEND execute [tactic get 1]
        ted query {SELECT * FROM working_cash}
    } -cleanup {
        cleanup
    } -result {
a   cash_reserve income  cash_on_hand gifts 
--- ------------ ------- ------------ ----- 
JOE 200000.0     10000.0 9000.0       0.0   
BOB 150000.0     5000.0  5000.0       0.0   
    }

    test execute-1.4 {execute: ALL funds, expended} -setup {
        execute_setup
        tactic mutate create $T1
    } -body {
        tactic::SPEND execute [tactic get 1]
        ted query {SELECT * FROM working_cash}
    } -cleanup {
        cleanup
    } -result {
a   cash_reserve income  cash_on_hand gifts 
--- ------------ ------- ------------ ----- 
JOE 200000.0     10000.0 0.0          0.0   
BOB 150000.0     5000.0  5000.0       0.0   
    }

    test execute-1.5 {execute: ALL funds, allocated} -setup {
        execute_setup
        tactic mutate create $T1
    } -body {
        tactic::SPEND execute [tactic get 1]
        cash allocations
    } -cleanup {
        cleanup
    } -result {world 0.0 region 0.0 goods 5000.0 black 0.0 pop 5000.0}


    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::athena_test::tests::






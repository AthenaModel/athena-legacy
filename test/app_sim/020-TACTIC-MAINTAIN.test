# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    020-TACTIC-MAINTAIN.test
#
# AUTHOR:
#    Dave Hanks
#
# DESCRIPTION:
#    app_sim(1) TACTIC:MAINTAIN:* order tests.
#
#    This test suite tests the MAINTAIN tactic's orders.
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    # Set up for tests
    proc setup {} {
        ted create JOE NB1 NB2 SHIA SUNN KURD BLUE
        variable S1
        variable B1
        variable T1

        set S1 [strategy getname JOE]
        ted order STRATEGY:BLOCK:ADD agent JOE
        lassign [$S1 blocks] B1
        ted order BLOCK:TACTIC:ADD block_id [$B1 id] typename MAINTAIN
        lassign [$B1 tactics] T1
    }


    # Clean up after a test

    proc cleanup {} {
        # Clean up the test environment
        ted cleanup
    }

    #-------------------------------------------------------------------
    # TACTIC:MAINTAIN

    test TACTIC:MAINTAIN-1.1 {required parms} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MAINTAIN
    } -result {
        tactic_id {required value}
    }

    test TACTIC:MAINTAIN-1.2 {tactic_id is unknown} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MAINTAIN tactic_id NONESUCH
    } -cleanup {
        cleanup
    } -result {
        tactic_id {Invalid MAINTAIN ID: "NONESUCH"}
    }

    test TACTIC:MAINTAIN-1.3 {mode is unknown} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MAINTAIN tactic_id [$T1 id] mode NONESUCH
    } -cleanup {
        cleanup
    } -result {
        mode {invalid value "NONESUCH", should be one of: ALL, EXACT, UPTO, PERCENT, EXCESS}
    }

    test TACTIC:MAINTAIN-1.4 {amount is non-numeric} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MAINTAIN tactic_id [$T1 id] amount NONESUCH
    } -cleanup {
        cleanup
    } -result {
        amount {invalid money value "NONESUCH", expected positive numeric value with optional K, M, or B suffix}
    }

    test TACTIC:MAINTAIN-1.5 {percent is non-numeric} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MAINTAIN tactic_id [$T1 id] percent NONESUCH
    } -cleanup {
        cleanup
    } -result {
        percent {invalid value "NONESUCH", expected double}
    }

    test TACTIC:MAINTAIN-1.6 {level is non-numeric} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MAINTAIN tactic_id [$T1 id] level NONESUCH
    } -cleanup {
        cleanup
    } -result {
        level {invalid value "NONESUCH", expected double}
    }

    test TACTIC:MAINTAIN-1.7 {amount is negative} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MAINTAIN tactic_id [$T1 id] amount -1
    } -cleanup {
        cleanup
    } -result {
        amount {invalid money value "-1", expected positive numeric value with optional K, M, or B suffix}
    }

    test TACTIC:MAINTAIN-1.8 {percent is negative} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MAINTAIN tactic_id [$T1 id] percent -1
    } -cleanup {
        cleanup
    } -result {
        percent {invalid value "-1", expected double in range 0.0, 100.0}
    }

    test TACTIC:MAINTAIN-1.9 {level is negative} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MAINTAIN tactic_id [$T1 id] level -1
    } -cleanup {
        cleanup
    } -result {
        level {invalid value "-1", expected double in range 0.0, 100.0}
    }

    test TACTIC:MAINTAIN-1.10 {mode requires amount, no amount} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MAINTAIN \
            tactic_id [$T1 id] mode EXACT amount 0.0
    } -cleanup {
        cleanup
    } -result {
        amount {You must specify an amount > 0.0}
    }

    test TACTIC:MAINTAIN-1.11 {mode requires percent, no percent} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MAINTAIN \
            tactic_id [$T1 id] mode PERCENT percent 0.0
    } -cleanup {
        cleanup
    } -result {
        percent {You must specify a percent > 0.0}
    }

    test TACTIC:MAINTAIN-2.1 {tactic is created} -setup {
        setup
    } -body {
        ted order TACTIC:MAINTAIN tactic_id [$T1 id] \
            nlist [gofer construct NBHOODS BY_VALUE {NB1 NB2}]

        ted pdicts [$T1 getdict]
    } -cleanup {
        cleanup
    } -match dictglob -result {
        amount     0.0
        execstatus NONE
        faildict   {}
        id         *
        level      100.0
        mode       ALL
        nlist      {_type NBHOODS _rule BY_VALUE nlist {NB1 NB2}}
        parent     ::bean::block*
        percent    0.0
        state      normal
    }

    test TACTIC:MAINTAIN-2.2 {tactic is created, EXACT} -setup {
        setup
    } -body {
        ted order TACTIC:MAINTAIN tactic_id [$T1 id] mode EXACT amount 10.0 \
            nlist [gofer construct NBHOODS BY_VALUE {NB1 NB2}]

        ted pdicts [$T1 getdict]
    } -cleanup {
        cleanup
    } -match dictglob -result {
        amount     10.0
        execstatus NONE
        faildict   {}
        id         *
        level      100.0
        mode       EXACT
        nlist      {_type NBHOODS _rule BY_VALUE nlist {NB1 NB2}}
        parent     ::bean::block*
        percent    0.0
        state      normal
    }

    test TACTIC:MAINTAIN-2.3 {tactic is created, UPTO} -setup {
        setup
    } -body {
        ted order TACTIC:MAINTAIN tactic_id [$T1 id] mode UPTO amount 10.0 \
            nlist [gofer construct NBHOODS BY_VALUE {NB1 NB2}]

        ted pdicts [$T1 getdict]
    } -cleanup {
        cleanup
    } -match dictglob -result {
        amount     10.0
        execstatus NONE
        faildict   {}
        id         *
        level      100.0
        mode       UPTO
        nlist      {_type NBHOODS _rule BY_VALUE nlist {NB1 NB2}}
        parent     ::bean::block*
        percent    0.0
        state      normal
    }

    test TACTIC:MAINTAIN-2.4 {tactic is created, PERCENT} -setup {
        setup
    } -body {
        ted order TACTIC:MAINTAIN tactic_id [$T1 id] mode PERCENT percent 10.0 \
            nlist [gofer construct NBHOODS BY_VALUE {NB1 NB2}]

        ted pdicts [$T1 getdict]
    } -cleanup {
        cleanup
    } -match dictglob -result {
        amount     0.0
        execstatus NONE
        faildict   {}
        id         *
        level      100.0
        mode       PERCENT
        nlist      {_type NBHOODS _rule BY_VALUE nlist {NB1 NB2}}
        parent     ::bean::block*
        percent    10.0
        state      normal
    }

    test TACTIC:MAINTAIN-2.5 {tactic is created, EXCESS} -setup {
        setup
    } -body {
        ted order TACTIC:MAINTAIN tactic_id [$T1 id] mode EXCESS amount 10.0 \
            nlist [gofer construct NBHOODS BY_VALUE {NB1 NB2}]

        ted pdicts [$T1 getdict]
    } -cleanup {
        cleanup
    } -match dictglob -result {
        amount     10.0
        execstatus NONE
        faildict   {}
        id         *
        level      100.0
        mode       EXCESS
        nlist      {_type NBHOODS _rule BY_VALUE nlist {NB1 NB2}}
        parent     ::bean::block*
        percent    0.0
        state      normal
    }


    test TACTIC:MAINTAIN-2.6 {notifier event} -setup {
        setup
    } -body {
        ted notifier bind ::projectlib::bean <Monitor>
        ted order TACTIC:MAINTAIN tactic_id [$T1 id] \
            nlist [gofer construct NBHOODS BY_VALUE {NB1 NB2}]
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::projectlib::bean <Monitor>}
    }


    test TACTIC:MAINTAIN-3.1 {undo effects} -setup {
        setup
        ted order TACTIC:MAINTAIN tactic_id [$T1 id] \
            nlist [gofer construct NBHOODS BY_VALUE {NB1 NB2}]
    } -body {
        ted notifier bind ::projectlib::bean <Monitor>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::projectlib::bean <Monitor>}
    }

    test TACTIC:MAINTAIN-4.1 {identity} -setup {
        setup
    } -body {
        ted tactic identity $T1
    } -cleanup {
        cleanup
    } -result {OK}

    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::athena_test::tests::






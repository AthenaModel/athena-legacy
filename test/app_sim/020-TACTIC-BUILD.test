# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    020-TACTIC-BUILD.test
#
# AUTHOR:
#    Dave Hanks
#
# DESCRIPTION:
#    app_sim(1) TACTIC:BUILD:* order tests.
#
#    This test suite tests the BUILD tactic's orders.
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    # Set up for tests
    proc setup {} {
        ted create JOE NB1 NB2 SHIA SUNN KURD BLUE
        variable S1
        variable B1
        variable T1

        set S1 [strategy getname JOE]
        ted order STRATEGY:BLOCK:ADD agent JOE
        lassign [$S1 blocks] B1
        ted order BLOCK:TACTIC:ADD block_id [$B1 id] typename BUILD
        lassign [$B1 tactics] T1
    }


    # Clean up after a test

    proc cleanup {} {
        # Clean up the test environment
        ted cleanup
    }

    #-------------------------------------------------------------------
    # TACTIC:BUILD

    test TACTIC:BUILD-1.1 {required parms} -setup {
        setup
    } -body {
        ted order -reject TACTIC:BUILD
    } -result {
        tactic_id {required value}
    }

    test TACTIC:BUILD-1.2 {tactic_id is unknown} -setup {
        setup
    } -body {
        ted order -reject TACTIC:BUILD tactic_id NONESUCH
    } -cleanup {
        cleanup
    } -result {
        tactic_id {Invalid BUILD ID: "NONESUCH"}
    }

    test TACTIC:BUILD-1.3 {mode is unknown} -setup {
        setup
    } -body {
        ted order -reject TACTIC:BUILD tactic_id [$T1 id] mode NONESUCH
    } -cleanup {
        cleanup
    } -result {
        mode {invalid value "NONESUCH", should be one of: ALL, EXACT, PERCENT}
    }

    test TACTIC:BUILD-1.4 {percent is non-numeric} -setup {
        setup
    } -body {
        ted order -reject TACTIC:BUILD tactic_id [$T1 id] percent NONESUCH
    } -cleanup {
        cleanup
    } -result {
        percent {invalid value "NONESUCH", expected double}
    }

    test TACTIC:BUILD-1.5 {amount is non-numeric} -setup {
        setup
    } -body {
        ted order -reject TACTIC:BUILD tactic_id [$T1 id] amount NONESUCH
    } -cleanup {
        cleanup
    } -result {
        amount {invalid money value "NONESUCH", expected positive numeric value with optional K, M, or B suffix}
    }

    test TACTIC:BUILD-1.6 {amount is negative} -setup {
        setup
    } -body {
        ted order -reject TACTIC:BUILD tactic_id [$T1 id] amount -1
    } -cleanup {
        cleanup
    } -result {
        amount {invalid money value "-1", expected positive numeric value with optional K, M, or B suffix}
    }

    test TACTIC:BUILD-1.7 {percent is negative} -setup {
        setup
    } -body {
        ted order -reject TACTIC:BUILD tactic_id [$T1 id] percent -1
    } -cleanup {
        cleanup
    } -result {
        percent {invalid value "-1", expected double in range 0.0, 100.0}
    }

    test TACTIC:BUILD-1.8 {mode requires percent, no percent} -setup {
        setup
    } -body {
        ted order -reject TACTIC:BUILD \
            tactic_id [$T1 id] mode PERCENT percent 0.0
    } -cleanup {
        cleanup
    } -result {
        percent {You must specify a percentage of cash > 0.0}
    }

    test TACTIC:BUILD-2.1 {tactic is created} -setup {
        setup
    } -body {
        ted order TACTIC:BUILD tactic_id [$T1 id] n NB1
        ted pdicts [$T1 getdict]
    } -cleanup {
        cleanup
    } -match dictglob -result {
        amount     0
        bid        0
        done       0
        execstatus NONE
        faildict   {}
        id         *
        mode       ALL
        n          NB1
        num        1
        parent     ::bean::block*
        percent    0
        state      normal
    }

    test TACTIC:BUILD-2.2 {tactic is created, EXACT} -setup {
        setup
    } -body {
        ted order TACTIC:BUILD tactic_id [$T1 id] n NB1 mode EXACT amount 10000

        ted pdicts [$T1 getdict]
    } -cleanup {
        cleanup
    } -match dictglob -result {
        amount     10000.0
        bid        0
        done       0
        execstatus NONE
        faildict   {}
        id         *
        mode       EXACT
        n          NB1
        num        1
        parent     ::bean::block*
        percent    0
        state      normal
    }

    test TACTIC:BUILD-2.3 {tactic is created, PERCENT} -setup {
        setup
    } -body {
        ted order TACTIC:BUILD tactic_id [$T1 id] n NB1 mode PERCENT percent 10

        ted pdicts [$T1 getdict]
    } -cleanup {
        cleanup
    } -match dictglob -result {
        amount     0
        bid        0
        done       0
        execstatus NONE
        faildict   {}
        id         *
        mode       PERCENT
        n          NB1
        num        1
        parent     ::bean::block*
        percent    10
        state      normal
    }

    test TACTIC:BUILD-2.4 {notifier event} -setup {
        setup
    } -body {
        ted notifier bind ::projectlib::bean <Monitor>
        ted order TACTIC:BUILD tactic_id [$T1 id] n NB1 mode EXACT amount 10000
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::projectlib::bean <Monitor>}
    }


    test TACTIC:BUILD-3.1 {undo effects} -setup {
        setup
        ted order TACTIC:BUILD tactic_id [$T1 id] n NB1 mode EXACT amount 10000
    } -body {
        ted notifier bind ::projectlib::bean <Monitor>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::projectlib::bean <Monitor>}
    }

    test TACTIC:BUILD-4.1 {identity} -setup {
        setup
    } -body {
        ted tactic identity $T1
    } -cleanup {
        cleanup
    } -result {OK}

    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::athena_test::tests::






# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    020-RELATIONSHIP.test
#
# AUTHOR:
#    Will Duquette
#
# DESCRIPTION:
#    app_sim(1) RELATIONSHIP:* order tests.
#
#    This test suite tests the relationship-related orders.
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    proc setup {} {
        ted create BLUE NB1 SHIA SUNN NB1SHIA
        rel mutate reconcile
    }


    # Clean up after a test

    proc cleanup {} {
        ted cleanup
    }


    #-------------------------------------------------------------------
    # RELATIONSHIP:UPDATE

    test UPDATE-1.1 {required parms} -body {
        ted order -reject RELATIONSHIP:UPDATE {}
    } -result {
        id {required value}
    }
    

    test UPDATE-1.2 {invalid n, f, g} -setup {
        setup
    } -body {
        ted order -reject RELATIONSHIP:UPDATE id {NONESUCH NONESUCH NONESUCH}
    } -cleanup {
        cleanup
    } -result {
        id {Invalid neighborhood, should be one of: PLAYBOX, NB1}
    }


    test UPDATE-1.3 {undefined relationship} -setup {
        setup
    } -body {
        ted order -reject RELATIONSHIP:UPDATE id {NB1 SUNN BLUE}
    } -cleanup {
        cleanup
    } -result {
        id {Relationship is not tracked for SUNN with BLUE in NB1.}
    }


    test UPDATE-1.5 {invalid rel: out of range} -setup {
        setup
    } -body {
        ted order -reject RELATIONSHIP:UPDATE id {NB1 SHIA BLUE} rel 1.1
    } -cleanup {
        cleanup
    } -result {
        rel {invalid value "1.1", should be a real number in range -1.0, 1.0, or one of: FRIEND, NEUTRAL, ENEMY}
    }


    test UPDATE-1.6 {f=g but rel != 1.0} -setup {
        setup
    } -body {
        ted order -reject RELATIONSHIP:UPDATE id {NB1 SHIA SHIA} rel 0.5
    } -cleanup {
        cleanup
    } -result {
        rel {invalid value "0.5", a group's relationship with itself must be 1.0}
    }


    test UPDATE-2.1 {rel is updated} -setup {
        setup
    } -body {
        ted order RELATIONSHIP:UPDATE {
            id    {NB1 SHIA BLUE}
            rel   0.5
        }

        ted query {SELECT * FROM rel_nfg}
    } -cleanup {
        cleanup
    } -result {
n       f    g    rel 
------- ---- ---- --- 
NB1     BLUE SHIA 0.0 
NB1     SHIA BLUE 0.5 
NB1     SHIA SHIA 1.0 
NB1     SUNN SHIA 0.0 
NB1     SHIA SUNN 0.0 
PLAYBOX BLUE BLUE 1.0 
    }


    test UPDATE-2.2 {<Entity> update} -setup {
        setup
    } -body {
        ted notifier bind ::rel <Entity>
        ted order RELATIONSHIP:UPDATE id {NB1 SHIA BLUE} rel 0.5
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rel <Entity> update {NB1 SHIA BLUE}}
    }


    test UPDATE-3.1 {undo undoes the change} -setup {
        setup

        ted order RELATIONSHIP:UPDATE {
            id    {NB1 SHIA BLUE}
            rel   0.5
        }
    } -body {
        ted notifier bind ::rel <Entity>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rel <Entity> update {NB1 SHIA BLUE}}
    }

    #-------------------------------------------------------------------
    # RELATIONSHIP:UPDATE:MULTI

    test UPDATE:MULTI-1.1 {required parms} -setup {
        setup
    } -body {
        ted order -reject RELATIONSHIP:UPDATE:MULTI {}
    } -cleanup {
        cleanup
    } -result {
        ids {required value}
    }
    

    test UPDATE:MULTI-1.2 {invalid n in ids} -setup {
        setup
    } -body {
        ted order -reject RELATIONSHIP:UPDATE:MULTI \
            ids {{NONESUCH1 SHIA BLUE}}
    } -cleanup {
        cleanup
    } -result {
        ids {Invalid neighborhood, should be one of: PLAYBOX, NB1}
    }


    test UPDATE:MULTI-1.3 {invalid f in ids} -setup {
        setup
    } -body {
        ted order -reject RELATIONSHIP:UPDATE:MULTI \
            ids {{NB1 NONESUCH BLUE}}
    } -cleanup {
        cleanup
    } -result {
        ids {Invalid group, should be one of: BLUE, SHIA, SUNN}
    }


    test UPDATE:MULTI-1.4 {invalid g in ids} -setup {
        setup
    } -body {
        ted order -reject RELATIONSHIP:UPDATE:MULTI \
            ids {{NB1 SHIA NONESUCH}}
    } -cleanup {
        cleanup
    } -result {
        ids {Invalid group, should be one of: BLUE, SHIA, SUNN}
    }


    test UPDATE:MULTI-1.5 {undefined relationship} -setup {
        setup
    } -body {
        ted order -reject RELATIONSHIP:UPDATE:MULTI ids {{NB1 SUNN BLUE}}
    } -cleanup {
        cleanup
    } -result {
        ids {Relationship is not tracked for SUNN with BLUE in NB1.}
    }


    test UPDATE:MULTI-1.6 {invalid rel: out of range} -setup {
        setup
    } -body {
        ted order -reject RELATIONSHIP:UPDATE:MULTI \
            ids {{NB1 SHIA BLUE}} rel 1.1
    } -cleanup {
        cleanup
    } -result {
        rel {invalid value "1.1", should be a real number in range -1.0, 1.0, or one of: FRIEND, NEUTRAL, ENEMY}
    }


    test UPDATE:MULTI-1.7 {f=g but rel != 1.0} -setup {
        setup
    } -body {
        ted order -reject RELATIONSHIP:UPDATE:MULTI \
            ids {{NB1 SHIA SHIA} {NB1 SHIA BLUE} {PLAYBOX BLUE BLUE}} rel 0.5
    } -cleanup {
        cleanup
    } -result {
        rel {invalid value "0.5", a group's relationship with itself must be 1.0}
    }


    test UPDATE:MULTI-2.1 {one relationship of several is updated} -setup {
        setup
    } -body {
        ted notifier bind ::rel <Entity>

        ted order RELATIONSHIP:UPDATE:MULTI {
            ids       {{NB1 SHIA BLUE}}
            rel       0.5
        }

        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rel <Entity> update {NB1 SHIA BLUE}}
    }


    test UPDATE:MULTI-2.2 {several relationships are updated} -setup {
        setup
    } -body {
        ted notifier bind ::rel <Entity>
        ted order RELATIONSHIP:UPDATE:MULTI {
            ids   {{NB1 SHIA BLUE} {NB1 BLUE SHIA}} 
            rel   0.5
        }
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rel <Entity> update {NB1 SHIA BLUE}}
        {::rel <Entity> update {NB1 BLUE SHIA}}
    }


    test UPDATE:MULTI-3.1 {undo undoes the change} -setup {
        setup

        ted order RELATIONSHIP:UPDATE:MULTI {
            ids        {{NB1 SHIA BLUE} {NB1 BLUE SHIA}}
            rel        0.5
        }
    } -body {
        ted notifier bind ::rel <Entity>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rel <Entity> update {NB1 SHIA BLUE}}
        {::rel <Entity> update {NB1 BLUE SHIA}}
    }


    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::athena_test::tests::







# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    020-TACTIC-DEMOB.test
#
# AUTHOR:
#    Will Duquette
#
# DESCRIPTION:
#    app_sim(1) TACTIC:DEMOB:* order tests.
#
#    This test suite tests the DEMOB tactic's orders.
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    # Set up for tests
    proc setup {} {
        ted create JOE BOB NB1 NB2 BLUE BRIT ALQ
    }


    # Clean up after a test

    proc cleanup {} {
        # Clean up the test environment
        ted cleanup
    }

    # Standard items

    set D1 {
        owner       JOE
        priority    bottom
        g           BLUE
        text1       SOME
        int1        100
        once        YES
    }

    set D2 {
        owner       JOE
        priority    bottom
        g           BLUE
        text1       SOME
        int1        100
        once        YES
    }

    set D3 {
        owner       JOE
        priority    bottom
        g           BLUE
        text1       ALL
        once        NO
    }

    #-------------------------------------------------------------------
    # TACTIC:DEMOB:CREATE

    test DEMOB:CREATE-1.1 {required parms} -body {
        ted order -reject TACTIC:DEMOB:CREATE {}
    } -result {
        owner {required value}
        g {required value}
        text1 {required value}
    }

    test DEMOB:CREATE-1.2 {owner is unknown} -setup {
        setup
    } -body {
        ted order -reject TACTIC:DEMOB:CREATE \
            [dict merge $D1 [list owner NONESUCH]]
    } -cleanup {
        cleanup
    } -result {
        owner {Invalid actor, should be one of: JOE, BOB}
    }

    test DEMOB:CREATE-1.3 {g is unknown} -setup {
        setup
    } -body {
        ted order -reject TACTIC:DEMOB:CREATE \
            [dict merge $D1 [list g NONESUCH]]
    } -cleanup {
        cleanup
    } -result {
        g {Invalid force/org group "NONESUCH", should be one of: ALQ, BLUE, BRIT}
    }

    test DEMOB:CREATE-1.4 {g is not owned by owner} -setup {
        setup
    } -body {
        ted order -reject TACTIC:DEMOB:CREATE \
            [dict merge $D1 [list g ALQ]]
    } -cleanup {
        cleanup
    } -result {
        g {Group ALQ is not owned by actor JOE.}
    }

    test DEMOB:CREATE-1.5 {text1 is invalid} -setup {
        setup
    } -body {
        ted order -reject TACTIC:DEMOB:CREATE \
            [dict merge $D1 [list text1 NONESUCH]]
    } -cleanup {
        cleanup
    } -result {
        text1 {invalid value "NONESUCH", should be one of: SOME, ALL}
    }

    test DEMOB:CREATE-1.6 {int1 is non-integer} -setup {
        setup
    } -body {
        ted order -reject TACTIC:DEMOB:CREATE \
            [dict merge $D1 [list int1 NONESUCH]]
    } -cleanup {
        cleanup
    } -result {
        int1 {invalid value "NONESUCH", expected integer}
    }

    test DEMOB:CREATE-1.7 {int1 is non-positive} -setup {
        setup
    } -body {
        ted order -reject TACTIC:DEMOB:CREATE \
            [dict merge $D1 [list int1 0]]
    } -cleanup {
        cleanup
    } -result {
        int1 {invalid value "0", expected integer no less than 1}
    }

    test DEMOB:CREATE-1.8 {text1=SOME, int1 is missing} -setup {
        setup
    } -body {
        ted order -reject TACTIC:DEMOB:CREATE \
            [dict merge $D1 [list int1 ""]]
    } -cleanup {
        cleanup
    } -result {
        int1 {Required value when mode is SOME.}
    }

    test DEMOB:CREATE-1.9 {once is invalid} -setup {
        setup
    } -body {
        ted order -reject TACTIC:DEMOB:CREATE \
            [dict merge $D1 [list once NONESUCH]]
    } -cleanup {
        cleanup
    } -result {
        once {invalid boolean "NONESUCH", should be one of: 1, 0, true, false, yes, no, on, off}
    }

    test DEMOB:CREATE-1.10 {priority is invalid} -setup {
        setup
    } -body {
        ted order -reject TACTIC:DEMOB:CREATE [dict merge $D1 {
            priority NONESUCH
        }]
    } -cleanup {
        cleanup
    } -result {
        priority {invalid value "nonesuch", should be one of: top, bottom}
    }

    test DEMOB:CREATE-2.1 {tactic is created: SOME} -setup {
        setup
    } -body {
        ted order TACTIC:DEMOB:CREATE $D2

        ted querylist {SELECT * FROM tactics_DEMOB}
    } -cleanup {
        cleanup
    } -result {
tactic_id    1
tactic_type  DEMOB
owner        JOE
narrative    Demobilize 100 of group BLUE's available personnel.
priority     1
g            BLUE
text1        SOME
int1         100
once         1
state        normal
exec_ts      
exec_flag    0
    }


    test DEMOB:CREATE-2.2 {tactic is created: ALL} -setup {
        setup
    } -body {
        ted order TACTIC:DEMOB:CREATE $D3

        ted querylist {SELECT * FROM tactics_DEMOB}
    } -cleanup {
        cleanup
    } -result {
tactic_id    1
tactic_type  DEMOB
owner        JOE
narrative    Demobilize all of group BLUE's available personnel.
priority     1
g            BLUE
text1        ALL
int1         
once         0
state        normal
exec_ts      
exec_flag    0
    }


    test DEMOB:CREATE-2.3 {Effects} -setup {
        setup
    } -body {
        ted notifier bind ::rdb <tactics>
        ted order TACTIC:DEMOB:CREATE $D1
        ted notifier received

        # NOTE: Two updates, because of priority setting.
    } -cleanup {
        cleanup
    } -result {
        {::rdb <tactics> update 1}
        {::rdb <tactics> update 1}
    }


    test DEMOB:CREATE-3.1 {undo effects} -setup {
        setup
        ted order TACTIC:DEMOB:CREATE $D1
    } -body {
        ted notifier bind ::rdb <tactics>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <tactics> delete 1}
    }

    #-------------------------------------------------------------------
    # TACTIC:DEMOB:UPDATE

    proc setup_update_deploy {} {
        variable D2
        setup
        ted order TACTIC:DEMOB:CREATE $D2
    }

    test DEMOB:UPDATE-1.1 {required parms} -body {
        ted order -reject TACTIC:DEMOB:UPDATE {}
    } -result {
        tactic_id {required value}
    }

    
    test DEMOB:UPDATE-1.2 {tactic_id is unknown} -setup {
        setup_update_deploy
    } -body {
        ted order -reject TACTIC:DEMOB:UPDATE \
            tactic_id NONESUCH
    } -cleanup {
        cleanup
    } -result {
        tactic_id {Invalid tactic ID: "NONESUCH"}
    }

    test DEMOB:UPDATE-1.3 {g is unknown} -setup {
        setup_update_deploy
    } -body {
        ted order -reject TACTIC:DEMOB:UPDATE tactic_id 1 g NONESUCH
    } -cleanup {
        cleanup
    } -result {
        g {Invalid force/org group "NONESUCH", should be one of: ALQ, BLUE, BRIT}
    }

    test DEMOB:UPDATE-1.4 {text1 is invalid} -setup {
        setup_update_deploy
    } -body {
        ted order -reject TACTIC:DEMOB:UPDATE tactic_id 1 text1 NONESUCH
    } -cleanup {
        cleanup
    } -result {
        text1 {invalid value "NONESUCH", should be one of: SOME, ALL}
    }


    test DEMOB:UPDATE-1.5 {int1 is non-integer} -setup {
        setup_update_deploy
    } -body {
        ted order -reject TACTIC:DEMOB:UPDATE tactic_id 1 int1 NONESUCH
    } -cleanup {
        cleanup
    } -result {
        int1 {invalid value "NONESUCH", expected integer}
    }

    test DEMOB:UPDATE-1.6 {int1 is non-positive} -setup {
        setup_update_deploy
    } -body {
        ted order -reject TACTIC:DEMOB:UPDATE tactic_id 1 int1 0
    } -cleanup {
        cleanup
    } -result {
        int1 {invalid value "0", expected integer no less than 1}
    }

    test DEMOB:UPDATE-1.7 {text1 now SOME, int1 is missing} -setup {
        setup
        ted order TACTIC:DEMOB:CREATE $D3
    } -body {
        ted order -reject TACTIC:DEMOB:UPDATE tactic_id 1 text1 SOME
    } -cleanup {
        cleanup
    } -result {
        int1 {Required value when mode is SOME.}
    }

    test DEMOB:UPDATE-1.8 {once is invalid} -setup {
        setup_update_deploy
    } -body {
        ted order -reject TACTIC:DEMOB:UPDATE tactic_id 1 once NONESUCH
    } -cleanup {
        cleanup
    } -result {
        once {invalid boolean "NONESUCH", should be one of: 1, 0, true, false, yes, no, on, off}
    }

    test DEMOB:UPDATE-1.9 {wrong flavor of tactic} -setup {
        setup_update_deploy
        rdb eval {UPDATE tactics SET tactic_type='BOGUS'}
    } -body {
        ted order -reject TACTIC:DEMOB:UPDATE tactic_id 1
    } -cleanup {
        cleanup
    } -result {
        tactic_id {Tactic 1 is not a DEMOB tactic}
    }

    test DEMOB:UPDATE-2.1 {tactic is updated} -setup {
        setup_update_deploy
    } -body {
        ted order TACTIC:DEMOB:UPDATE \
            tactic_id 1 int1 150 once NO

        ted querylist {SELECT * FROM tactics_DEMOB}
    } -cleanup {
        cleanup
    } -result {
tactic_id    1
tactic_type  DEMOB
owner        JOE
narrative    Demobilize 150 of group BLUE's available personnel.
priority     1
g            BLUE
text1        SOME
int1         150
once         0
state        normal
exec_ts      
exec_flag    0
    }

    test DEMOB:UPDATE-2.2 {tactic is updated} -setup {
        setup
        ted order TACTIC:DEMOB:CREATE $D3
    } -body {
        ted order TACTIC:DEMOB:UPDATE \
            tactic_id 1 text1 SOME int1 150

        ted querylist {SELECT * FROM tactics_DEMOB}
    } -cleanup {
        cleanup
    } -result {
tactic_id    1
tactic_type  DEMOB
owner        JOE
narrative    Demobilize 150 of group BLUE's available personnel.
priority     1
g            BLUE
text1        SOME
int1         150
once         0
state        normal
exec_ts      
exec_flag    0
    }


    test DEMOB:UPDATE-2.3 {Effects} -setup {
        setup
        ted order TACTIC:DEMOB:CREATE $D3
    } -body {
        ted notifier bind ::rdb <tactics>
        ted order TACTIC:DEMOB:UPDATE tactic_id 1 text1 SOME int1 150
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <tactics> update 1}
    }


    test DEMOB:UPDATE-3.1 {undo effects} -setup {
        setup_update_deploy
        ted order TACTIC:DEMOB:UPDATE tactic_id 1 int1 150
    } -body {
        ted notifier bind ::rdb <tactics>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <tactics> update 1}
    }


    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::athena_test::tests::






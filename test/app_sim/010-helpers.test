#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    # Clean up after a test
    proc cleanup {} {
        ted cleanup
    }


    #-----------------------------------------------------------------
    # fillparms

    test fillparms-1.1 {Fills in order parms} -setup {
        ted create SHIA
    } -body {
        array unset parms
        set parms(basepop) 150000
        fillparms CIVGROUP:UPDATE parms [civgroup getg SHIA]
        ted pdict [array get parms]
    } -cleanup {
        cleanup
    } -result {
        housing  AT_HOME
        sa_flag  0
        shape    NEUTRAL
        longname Shia
        lfp      60
        n        NB1
        basepop  150000
        pop_cr   0.0
        demeanor AVERAGE
        color    {#c00001}
        g        SHIA
    }

    #-----------------------------------------------------------------
    # Done

    cleanupTests
}

namespace delete ::athena_test::tests::

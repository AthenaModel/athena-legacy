# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    020-SITUATION-ENVIRONMENTAL.test
#
# AUTHOR:
#    Will Duquette
#
# DESCRIPTION:
#    app_sim(1) SITUATION:ENVIRONMENTAL:* order tests.
#
#    This test suite tests the envsit-related orders.
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    # Standard units
    set s1 {
        location  B00B00
        stype     BADWATER
        coverage  1.0
        inception 1
        g         ""
    }

    set s2 {
        location  B00B00
        stype COMMOUT
        coverage  0.5
        inception 0
        g         NONE
    }

    # Clean up after a test

    proc cleanup {} {
        # Clean up the test environment
        ted cleanup
    }

    #-------------------------------------------------------------------
    # SITUATION:ENVIRONMENTAL:CREATE

    test CREATE-1.1 {required parms} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:CREATE {}
    } -result {
        location {required value}
        stype {required value}
        coverage {required value}
        inception {required value}
    }

    
    test CREATE-1.2 {location is not a mapref} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:CREATE \
            {*}$s1 location NONESUCH
    } -cleanup {
        cleanup
    } -result {
        location {not a map reference string}
    }


    test CREATE-1.3 {location not in nbhood} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:CREATE \
            $s1
    } -cleanup {
        cleanup
    } -result {
        location {Should be within a neighborhood}
    }


    test CREATE-1.4 {invalid stype} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:CREATE \
            {*}$s1 stype NONESUCH
    } -cleanup {
        cleanup
    } -result {
        stype {invalid value "NONESUCH", should be one of: BADFOOD, BADWATER, BIO, CHEM, COMMOUT, DISASTER, DISEASE, EPIDEMIC, FOODSHRT, FUELSHRT, GARBAGE, INDSPILL, MOSQUE, NOWATER, ORDNANCE, PIPELINE, POWEROUT, REFINERY, SEWAGE}
    }


    test CREATE-1.5 {duplicate stype} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:CREATE $s1
    } -cleanup {
        cleanup
    } -result {
        stype {An envsit of this type already exists in this neighborhood.}
    }


    test CREATE-1.6 {invalid coverage} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:CREATE \
            {*}$s1 coverage 2.0
    } -cleanup {
        cleanup
    } -result {
        coverage {invalid value "2.0", should be a real number in range 0.0, 1.0}
    }


    test CREATE-1.7 {coverage can't be 0.0} -setup {
        ted create NB1
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:CREATE \
            {*}$s1 coverage 0.0
    } -cleanup {
        cleanup
    } -result {
        coverage {Coverage must be greater than 0.}
    }


    test CREATE-1.8 {invalid inception} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:CREATE \
            {*}$s1 inception NONESUCH
    } -cleanup {
        cleanup
    } -result {
        inception {invalid boolean "NONESUCH", should be one of: 1, 0, true, false, yes, no, on, off}
    }


    test CREATE-1.9 {invalid g} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:CREATE \
            {*}$s1 g NONESUCH
    } -cleanup {
        cleanup
    } -result {
        g {Invalid doing group, should be one of: NONE}
    }



    test CREATE-2.1 {envsit is created} -setup {
        ted create NB1 BLUE
    } -body {
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1

        ted query {SELECT * FROM envsits}
    } -cleanup {
        cleanup
    } -result {
s kind     stype    driver n   coverage state   ts tc change flist g    signature location inception resolver rdriver 
- -------- -------- ------ --- -------- ------- -- -- ------ ----- ---- --------- -------- --------- -------- ------- 
1 ::envsit BADWATER -1     NB1 1.0      INITIAL 0  0  NEW    ALL   NONE           100 100  1                  0       
    }


    test CREATE-2.2 {Effects} -setup {
        ted create NB1 BLUE
    } -body {
        ted notifier bind ::envsit <Entity>
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::envsit <Entity> create 1}
    }


    test CREATE-3.1 {undo effects} -setup {
        ted create NB1 BLUE
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted notifier bind ::envsit <Entity>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::envsit <Entity> delete 1}
    }


    #-------------------------------------------------------------------
    # SITUATION:ENVIRONMENTAL:DELETE

    test DELETE-1.1 {required parms} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:DELETE {}
    } -result {
        s {required value}
    }

    
    test DELETE-1.2 {unknown s} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:DELETE s NONESUCH
    } -result {
        s {not a "live" situation: "NONESUCH"}
    }


    test DELETE-1.3 {s not in initial state} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
        set sit [envsit get 1]
        $sit set state ACTIVE
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:DELETE s 1
    } -cleanup {
        cleanup
    } -result {
        s {operation is invalid; time has passed.}
    }


    test DELETE-2.1 {Effects} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted notifier bind ::envsit <Entity>
        ted order SITUATION:ENVIRONMENTAL:DELETE s 1
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::envsit <Entity> delete 1}
    }


    test DELETE-3.1 {Undo effects} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
        ted order SITUATION:ENVIRONMENTAL:DELETE s 1
    } -body {
        ted notifier bind ::envsit <Entity>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::envsit <Entity> create 1}
    }


    #-------------------------------------------------------------------
    # SITUATION:ENVIRONMENTAL:UPDATE

    # 1.*: parameter type validation
    # 2.*: correct operation
    # 3.*: undo

    test UPDATE-1.1 {required parms} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:UPDATE {}
    } -result {
        s {required value}
    }
    
    test UPDATE-1.2 {location is not a mapref} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:UPDATE s 1 location NONESUCH
    } -cleanup {
        cleanup
    } -result {
        location {not a map reference string}
    }


    test UPDATE-1.3 {invalid stype} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:UPDATE s 1 stype NONESUCH
    } -cleanup {
        cleanup
    } -result {
        stype {invalid value "NONESUCH", should be one of: BADFOOD, BADWATER, BIO, CHEM, COMMOUT, DISASTER, DISEASE, EPIDEMIC, FOODSHRT, FUELSHRT, GARBAGE, INDSPILL, MOSQUE, NOWATER, ORDNANCE, PIPELINE, POWEROUT, REFINERY, SEWAGE}
    }


    test UPDATE-1.4 {invalid coverage} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:UPDATE s 1 coverage NONESUCH
    } -cleanup {
        cleanup
    } -result {
        coverage {invalid value "NONESUCH", should be a real number in range 0.0, 1.0}
    }


    test UPDATE-1.5 {invalid inception} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:UPDATE s 1 inception NONESUCH
    } -cleanup {
        cleanup
    } -result {
        inception {invalid boolean "NONESUCH", should be one of: 1, 0, true, false, yes, no, on, off}
    }


    test UPDATE-1.6 {invalid g} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:UPDATE s 1 g NONESUCH
    } -cleanup {
        cleanup
    } -result {
        g {Invalid doing group, should be one of: NONE}
    }


    test UPDATE-1.7 {location is not in a nbhood} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:UPDATE s 1 location A00A00
    } -cleanup {
        cleanup
    } -result {
        location {Should be within a neighborhood}
    }


    test UPDATE-1.8 {Not INITIAL state} -setup {
        ted create NB1 BLUE
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
        [envsit get 1] set state ACTIVE
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:UPDATE s 1 \
            stype     COMMOUT \
            location  A00A00  \
            coverage  0.5     \
            inception NO      \
            g         BLUE
    } -cleanup {
        cleanup
    } -result {
        s {operation is invalid; time has passed.}
    }


    test UPDATE-2.1 {envsit is updated} -setup {
        ted create NB1 BLUE
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order SITUATION:ENVIRONMENTAL:UPDATE {
            s         1 
            location  B01B01
            stype     COMMOUT
            inception NO
            g         BLUE
        }

        ted query {SELECT * FROM envsits}
    } -cleanup {
        cleanup
    } -result {
s kind     stype   driver n   coverage state   ts tc change flist g    signature location inception resolver rdriver 
- -------- ------- ------ --- -------- ------- -- -- ------ ----- ---- --------- -------- --------- -------- ------- 
1 ::envsit COMMOUT -1     NB1 1.0      INITIAL 0  0  NEW    ALL   BLUE           101 101  0                  0       
    }


    test UPDATE-2.2 {<Entity> update} -setup {
        ted create NB1 BLUE
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted notifier bind ::envsit <Entity>
        ted order SITUATION:ENVIRONMENTAL:UPDATE s 1 stype COMMOUT
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::envsit <Entity> update 1}
    }


    test UPDATE-3.1 {undo undoes the change} -setup {
        ted create NB1 BLUE
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
        ted order SITUATION:ENVIRONMENTAL:UPDATE {
            s         1 
            location  B01B01
            stype     COMMOUT
            inception NO
            g         BLUE
        }
    } -body {
        ted notifier bind ::envsit <Entity>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::envsit <Entity> update 1}
    }


    #-------------------------------------------------------------------
    # SITUATION:ENVIRONMENTAL:MOVE

    # 1.*: parameter type validation
    # 2.*: correct operation
    # 3.*: undo

    test MOVE-1.1 {required parms} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:MOVE {}
    } -result {
        s {required value}
    }
    
    test MOVE-1.2 {location is not a mapref} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:MOVE s 1 location NONESUCH
    } -cleanup {
        cleanup
    } -result {
        location {not a map reference string}
    }

    test MOVE-1.3 {INITIAL state; location is not in a nbhood} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:MOVE s 1 location A00A00
    } -cleanup {
        cleanup
    } -result {
        location {Should be within a neighborhood}
    }


    test MOVE-1.4 {Not INITIAL sate; location is out of neighborhood} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
        [envsit get 1] set state ACTIVE
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:MOVE s 1 location A00A00
    } -cleanup {
        cleanup
    } -result {
        location {Cannot remove situation from its neighborhood}
    }


    test MOVE-2.1 {envsit is updated} -setup {
        ted create NB1 BLUE
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order SITUATION:ENVIRONMENTAL:MOVE {
            s         1 
            location  B01B01
        }

        ted query {SELECT s, location FROM envsits}
    } -cleanup {
        cleanup
    } -result {
s location 
- -------- 
1 101 101  
    }


    test MOVE-2.2 {<Entity> update} -setup {
        ted create NB1 BLUE
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted notifier bind ::envsit <Entity>
        ted order SITUATION:ENVIRONMENTAL:MOVE s 1 location B01B01
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::envsit <Entity> update 1}
    }


    test MOVE-3.1 {undo undoes the change} -setup {
        ted create NB1 BLUE
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
        ted order SITUATION:ENVIRONMENTAL:MOVE {
            s         1 
            location  B01B01
        }
    } -body {
        ted notifier bind ::envsit <Entity>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::envsit <Entity> update 1}
    }


    #-------------------------------------------------------------------
    # SITUATION:ENVIRONMENTAL:RESOLVE

    # 1.*: parameter type validation
    # 2.*: correct operation
    # 3.*: undo

    test RESOLVE-1.1 {required parms} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:RESOLVE {}
    } -result {
        s {required value}
    }
    
    test RESOLVE-1.2 {s is not a live situation} -body {
        ted order -reject SITUATION:ENVIRONMENTAL:RESOLVE s 1
    } -cleanup {
        cleanup
    } -result {
        s {not a "live" situation: "1".}
    }


    test RESOLVE-1.3 {invalid resolver} -setup {
        ted create NB1
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order -reject SITUATION:ENVIRONMENTAL:RESOLVE s 1 resolver NONESUCH
    } -cleanup {
        cleanup
    } -result {
        resolver {Invalid doing group, should be one of: NONE}
    }


    test RESOLVE-2.1 {envsit is resolved} -setup {
        ted create NB1 BLUE
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted order SITUATION:ENVIRONMENTAL:RESOLVE s 1 resolver BLUE

        ted query {SELECT * FROM envsits}
    } -cleanup {
        cleanup
    } -result {
s kind     stype    driver n   coverage state ts tc change   flist g    signature location inception resolver rdriver 
- -------- -------- ------ --- -------- ----- -- -- -------- ----- ---- --------- -------- --------- -------- ------- 
1 ::envsit BADWATER -1     NB1 1.0      ENDED 0  0  RESOLVED ALL   NONE           100 100  1         BLUE     0       
    }


    test RESOLVE-2.2 {<Entity> update} -setup {
        ted create NB1 BLUE
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
    } -body {
        ted notifier bind ::envsit <Entity>
        ted order SITUATION:ENVIRONMENTAL:RESOLVE s 1
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::envsit <Entity> update 1}
    }


    test RESOLVE-3.1 {undo undoes the change} -setup {
        ted create NB1 BLUE
        ted order SITUATION:ENVIRONMENTAL:CREATE $s1
        ted order SITUATION:ENVIRONMENTAL:RESOLVE s 1 resolver BLUE
    } -body {
        ted notifier bind ::envsit <Entity>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::envsit <Entity> update 1}
    }

    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::athena_test::tests::






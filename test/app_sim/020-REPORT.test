#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    proc setup {} {
        ted create NB1 NB2 BLUE SHIA NB1SHIA NB2SHIA USAID
        sim mutate run -ticks 1
    }


    # Clean up after a test

    proc cleanup {} {
        # Clean up the test environment
        sim restart
        sim checkpoint
        ted cleanup
    }

    #-------------------------------------------------------------------
    # REPORT:CIVILIAN:SATISFACTION

    test CIVILIAN:SATISFACTION-1.1 {not in prep} -body {
        ted order -reject REPORT:CIVILIAN:SATISFACTION {}
    } -result {
        * {Simulation state is PREP, but order is valid only in these states: PAUSED, RUNNING}
    }


    test CIVILIAN:SATISFACTION-1.2 {required parms} -setup {
        setup
    } -body {
        ted order -reject REPORT:CIVILIAN:SATISFACTION {}
    } -cleanup {
        cleanup
    } -result {
        n {required value}
        g {required value}
    }


    test CIVILIAN:SATISFACTION-1.3 {invalid neighborhood} -setup {
        setup
    } -body {
        ted order -reject REPORT:CIVILIAN:SATISFACTION n NONESUCH g SHIA
    } -cleanup {
        cleanup
    } -result {
        n {Invalid neighborhood "NONESUCH", should be one of: ALL, NB1, NB2}
    }


    test CIVILIAN:SATISFACTION-1.4 {invalid group} -setup {
        setup
    } -body {
        ted order -reject REPORT:CIVILIAN:SATISFACTION n NB1 g NONESUCH
    } -cleanup {
        cleanup
    } -result {
        g {Invalid civilian group "NONESUCH", should be one of: ALL, SHIA}
    }


    test CIVILIAN:SATISFACTION-2.1 {n ALL g ALL} -setup {
        setup
    } -body {
        ted order REPORT:CIVILIAN:SATISFACTION n ALL g ALL
    } -cleanup {
        cleanup
    } -result {}


    test CIVILIAN:SATISFACTION-2.2 {n ALL g SHIA} -setup {
        setup
    } -body {
        ted order REPORT:CIVILIAN:SATISFACTION n ALL g SHIA
    } -cleanup {
        cleanup
    } -result {}


    test CIVILIAN:SATISFACTION-2.3 {n NB1 g ALL} -setup {
        setup
    } -body {
        ted order REPORT:CIVILIAN:SATISFACTION n NB1 g ALL
    } -cleanup {
        cleanup
    } -result {}


    test CIVILIAN:SATISFACTION-2.4 {n NB1 g SHIA} -setup {
        setup
    } -body {
        ted order REPORT:CIVILIAN:SATISFACTION n NB1 g SHIA
    } -cleanup {
        cleanup
    } -result {}



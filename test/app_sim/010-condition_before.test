# DESCRIPTION:
#    condition_before(sim) tests.
#
#    This test suite tests the condition_before(sim) ensemble.
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    # Set up for tests

    proc setup {} {
        ted create JOE BOB NB1 NB2 BLUE BRIT
        ted order TACTIC:DEPOSIT:CREATE owner JOE amount 10

        # Verify that unused columns contain NULL
        rdb nullvalue "@"
    }

    # Clean up after a test

    proc cleanup {} {
        # Clean up the test environment
        rdb nullvalue ""
        array unset parms
        ted cleanup
    }

    # Standard Conditions.
    
    set C1 {
        cc_id          1
        condition_type BEFORE
        t1             2
    }

    #-------------------------------------------------------------------
    # narrative

    test narrative-1.1 {narrative} -setup {
        setup
        condition mutate create $C1
    } -body {
        condition::BEFORE narrative [condition get 1]
    } -cleanup {
        cleanup
    } -result {The current simulation time is earlier than week 2, i.e., before 2012W03.}

    #-------------------------------------------------------------------
    # check


    test check-1.1 {check: successful} -setup {
        setup
        condition mutate create $C1
    } -body {
        # NOTE: There's no way for the check to fail.
        condition::BEFORE check [condition get 1]
    } -cleanup {
        cleanup
    } -result {}

    #-------------------------------------------------------------------
    # eval


    proc BeforeEval {now} {
        simclock reset
        if {$now > 0} {
            simclock advance $now
        }

        return [condition::BEFORE eval [condition get 1]]
    }

    test eval-1.1 {eval before} -setup {
        setup
        condition mutate create $C1
    } -body {
        # t1 = 10
        set a [BeforeEval 1]
        set b [BeforeEval 2]
        set c [BeforeEval 3]

        list $a $b $c
    } -cleanup {
        cleanup
    } -result {1 0 0}

    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::athena_test::tests::










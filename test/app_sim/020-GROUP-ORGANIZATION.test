        }]
    } -result {
        effects_factor {invalid value "-0.1", expected double no less than 0.0}
    }


    test CREATE-2.1 {orggroup is created} -body {
        ted order GROUP:ORGANIZATION:CREATE $usaid
        ted order GROUP:ORGANIZATION:CREATE $hal
        ted query {SELECT * FROM orggroups_view}
    } -cleanup {
        cleanup
    } -result {
g     longname   color   shape   symbol       gtype orgtype demeanor rollup_weight effects_factor 
----- ---------- ------- ------- ------------ ----- ------- -------- ------------- -------------- 
USAID US Aid     #00ff00 NEUTRAL organization ORG   NGO     AVERAGE  1.0           1.1            
HAL   Haliburton #ffff00 NEUTRAL organization ORG   CTR     AVERAGE  1.2           1.3            
    }


    test CREATE-2.2 {Effects} -body {
        ted notifier bind ::orggroup <Entity>
        ted notifier bind ::scenario <Reconcile>
        ted order GROUP:ORGANIZATION:CREATE $usaid
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::orggroup <Entity> create USAID}
        {::scenario <Reconcile>}
    }


    test CREATE-3.1 {Undo effects} -setup {
        ted order GROUP:ORGANIZATION:CREATE $usaid
    } -body {
        ted notifier bind ::orggroup <Entity>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::orggroup <Entity> delete USAID}
    }



    test UPDATE-2.1 {orggroup is updated} -setup {
        ted order GROUP:ORGANIZATION:CREATE $usaid
    } -body {
        ted order GROUP:ORGANIZATION:UPDATE {
            g              USAID
            longname       "Red Cross"
            color          "#ff0000"
            shape          ENEMY
            orgtype        IGO
            demeanor       AGGRESSIVE
            rollup_weight  0.1
            effects_factor 0.2
        }

        ted query {SELECT * FROM orggroups_view}
    } -cleanup {
        cleanup
    } -result {
g     longname  color   shape symbol       gtype orgtype demeanor   rollup_weight effects_factor 
----- --------- ------- ----- ------------ ----- ------- ---------- ------------- -------------- 
USAID Red Cross #ff0000 ENEMY organization ORG   IGO     AGGRESSIVE 0.1           0.2            
    }


    test UPDATE-2.2 {<Entity> update} -setup {

# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    020-CONDITION-INFLUENCE.test
#
# AUTHOR:
#    Will Duquette
#
# DESCRIPTION:
#    app_sim(1) CONDITION:INFLUENCE:* order tests.
#
#    This test suite tests the CONDITION:INFLUENCE:* orders.
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    # Set up for tests
    proc setup {} {
        ted create JOE BOB NB1 NB2 BLUE BRIT ALQ
        ted order TACTIC:DEPOSIT:CREATE owner JOE amount 10
    }


    # Clean up after a test

    proc cleanup {} {
        # Clean up the test environment
        ted cleanup
    }

    # Standard items

    set C1 {
        cc_id          1
        a              JOE
        n              NB2
        op1            GT
        x1             0.4
    }

    #-------------------------------------------------------------------
    # CONDITION:INFLUENCE:CREATE

    test CREATE-1.1 {required parms} -body {
        ted order -reject CONDITION:INFLUENCE:CREATE {}
    } -result {
        cc_id {required value}
        a {required value}
        n {required value}
        op1 {required value}
        x1 {required value}
    }

    
    test CREATE-1.2 {tactic is unknown} -setup {
        setup
    } -body {
        ted order -reject CONDITION:INFLUENCE:CREATE \
            [dict merge $C1 [list cc_id NONESUCH]]
    } -cleanup {
        cleanup
    } -result {
        cc_id {Invalid goal or tactic ID: "NONESUCH"}
    }

    test CREATE-1.3 {actor is unknown} -setup {
        setup
    } -body {
        ted order -reject CONDITION:INFLUENCE:CREATE \
            [dict merge $C1 [list a NONESUCH]]
    } -cleanup {
        cleanup
    } -result {
        a {Invalid actor, should be one of: JOE, BOB}
    }

    test CREATE-1.4 {nbhood is unknown} -setup {
        setup
    } -body {
        ted order -reject CONDITION:INFLUENCE:CREATE \
            [dict merge $C1 [list n NONESUCH]]
    } -cleanup {
        cleanup
    } -result {
        n {Invalid neighborhood, should be one of: NB1, NB2}
    }

    test CREATE-1.5 {op1 is invalid} -setup {
        setup
    } -body {
        ted order -reject CONDITION:INFLUENCE:CREATE \
            [dict merge $C1 [list op1 NONESUCH]]
    } -cleanup {
        cleanup
    } -result {
        op1 {invalid value "NONESUCH", should be one of: EQ, GE, GT, LE, LT}
    }

    test CREATE-1.6 {x1 is invalid} -setup {
        setup
    } -body {
        ted order -reject CONDITION:INFLUENCE:CREATE [dict merge $C1 {
            x1 NONESUCH
        }]
    } -cleanup {
        cleanup
    } -result {
        x1 {invalid value "NONESUCH", should be a real number in range 0.0, 1.0}
    }

    test CREATE-2.1 {condition is created} -setup {
        setup
    } -body {
        ted order CONDITION:INFLUENCE:CREATE $C1

        ted querylist {SELECT * FROM conditions_INFLUENCE}
    } -cleanup {
        cleanup
    } -result {
condition_id    1
condition_type  INFLUENCE
cc_id           1
narrative       Actor JOE's influence in NB2 is greater than 0.40
state           normal
flag            
a               JOE
n               NB2
op1             GT
x1              0.4
    }


    test CREATE-2.2 {Effects} -setup {
        setup
    } -body {
        ted notifier bind ::rdb <conditions>
        ted order CONDITION:INFLUENCE:CREATE $C1
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <conditions> update 1}
    }


    test CREATE-3.1 {undo effects} -setup {
        setup
        ted order CONDITION:INFLUENCE:CREATE $C1
    } -body {
        ted notifier bind ::rdb <conditions>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <conditions> delete 1}
    }


    #-------------------------------------------------------------------
    # CONDITION:INFLUENCE:UPDATE

    proc setup_update {} {
        variable C1
        setup
        ted order CONDITION:INFLUENCE:CREATE $C1
    }

    test UPDATE-1.1 {required parms} -body {
        ted order -reject CONDITION:INFLUENCE:UPDATE {}
    } -result {
        condition_id {required value}
    }

    
    test UPDATE-1.2 {condition_id is unknown} -setup {
        setup_update
    } -body {
        ted order -reject CONDITION:INFLUENCE:UPDATE \
            condition_id NONESUCH x1 0.1
    } -cleanup {
        cleanup
    } -result {
        condition_id {Invalid condition ID: "NONESUCH"}
    }

    test UPDATE-1.3 {actor is unknown} -setup {
        setup_update
    } -body {
        ted order -reject CONDITION:INFLUENCE:UPDATE condition_id 1 a NONESUCH
    } -cleanup {
        cleanup
    } -result {
        a {Invalid actor, should be one of: JOE, BOB}
    }

    test UPDATE-1.4 {nbhood is unknown} -setup {
        setup_update
    } -body {
        ted order -reject CONDITION:INFLUENCE:UPDATE condition_id 1 n NONESUCH
    } -cleanup {
        cleanup
    } -result {
        n {Invalid neighborhood, should be one of: NB1, NB2}
    }

    test UPDATE-1.5 {op1 is invalid} -setup {
        setup_update
    } -body {
        ted order -reject CONDITION:INFLUENCE:UPDATE condition_id 1 op1 NONESUCH
    } -cleanup {
        cleanup
    } -result {
        op1 {invalid value "NONESUCH", should be one of: EQ, GE, GT, LE, LT}
    }

    test UPDATE-1.6 {x1 is invalid} -setup {
        setup_update
    } -body {
        ted order -reject CONDITION:INFLUENCE:UPDATE condition_id 1 x1 NONESUCH
    } -cleanup {
        cleanup
    } -result {
        x1 {invalid value "NONESUCH", should be a real number in range 0.0, 1.0}
    }

    test UPDATE-1.7 {wrong flavor of condition} -setup {
        setup_update
        rdb eval {UPDATE conditions SET condition_type='BOGUS'}
    } -body {
        ted order -reject CONDITION:INFLUENCE:UPDATE condition_id 1 x1 0.2
    } -cleanup {
        cleanup
    } -result {
        condition_id {Condition 1 is not a INFLUENCE condition}
    }

    test UPDATE-2.1 {activities are updated} -setup {
        setup_update
    } -body {
        ted order CONDITION:INFLUENCE:UPDATE \
            condition_id 1 a BOB n NB1 op1 LT x1 0.3

        ted querylist {SELECT * FROM conditions_INFLUENCE}
    } -cleanup {
        cleanup
    } -result {
condition_id    1
condition_type  INFLUENCE
cc_id           1
narrative       Actor BOB's influence in NB1 is less than 0.30
state           normal
flag            
a               BOB
n               NB1
op1             LT
x1              0.3
    }


    test UPDATE-2.2 {Effects} -setup {
        setup_update
    } -body {
        ted notifier bind ::rdb <conditions>
        ted order CONDITION:INFLUENCE:UPDATE condition_id 1 x1 0.3
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <conditions> update 1}
    }


    test UPDATE-3.1 {undo effects} -setup {
        setup_update
        ted order CONDITION:INFLUENCE:UPDATE condition_id 1 x1 0.3
    } -body {
        ted notifier bind ::rdb <conditions>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <conditions> update 1}
    }


    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::athena_test::tests::








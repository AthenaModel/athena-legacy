# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    020-TACTIC-MOBILIZE.test
#
# AUTHOR:
#    Will Duquette
#
# DESCRIPTION:
#    TACTIC:MOBILIZE:* Orders tests
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    # Set up for tests

    proc setup {} {
        ted create JOE BLUE ALQ
        variable S1
        variable B1
        variable T1
        set S1 [strategy getname JOE]
        ted order STRATEGY:BLOCK:ADD agent JOE
        lassign [$S1 blocks] B1
        ted order BLOCK:TACTIC:ADD block_id [$B1 id] typename MOBILIZE
        lassign [$B1 tactics] T1
    }

    # Clean up after a test

    proc cleanup {} {
        ted cleanup
    }

    #-------------------------------------------------------------------
    # TACTIC:MOBILIZE

    test TACTIC:MOBILIZE-1.1 {required parameters} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MOBILIZE
    } -cleanup {
        cleanup
    } -result {
        tactic_id {required value}
    }

    test TACTIC:MOBILIZE-1.2 {unknown tactic_id} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MOBILIZE tactic_id NONESUCH
    } -cleanup {
        cleanup
    } -match glob -result {
        tactic_id {invalid value "NONESUCH", should be one of: *}
    }

    test TACTIC:MOBILIZE-1.3 {invalid g} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MOBILIZE tactic_id [$T1 id] g NONESUCH
    } -cleanup {
        cleanup
    } -result {
        g {invalid value "NONESUCH", should be one of: BLUE}
    }

    test TACTIC:MOBILIZE-1.4 {invalid personnel} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MOBILIZE tactic_id [$T1 id] personnel NONESUCH
    } -cleanup {
        cleanup
    } -result {
        personnel {invalid value "NONESUCH", expected integer}
    }

    test TACTIC:MOBILIZE-1.5 {0 personnel} -setup {
        setup
    } -body {
        ted order -reject TACTIC:MOBILIZE tactic_id [$T1 id] personnel 0
    } -cleanup {
        cleanup
    } -result {
        personnel {invalid value "0", expected integer no less than 1}
    }

    test TACTIC:MOBILIZE-2.1 {tactic updated} -setup {
        setup
    } -body {
        ted order TACTIC:MOBILIZE \
            tactic_id [$T1 id] \
            g         BLUE     \
            personnel 1000

        ted pdicts [$T1 getdict]
    } -cleanup {
        cleanup
    } -match glob -result {
        execstatus NONE
        g          BLUE
        id         *
        parent     ::bean::block*
        personnel  1000
        state      normal
    }

    test TACTIC:MOBILIZE-2.2 {notifier event} -setup {
        setup
    } -body {
        ted notifier bind ::projectlib::bean <Monitor>
        ted order TACTIC:MOBILIZE tactic_id [$T1 id] personnel 100
        ted notifier received
    } -cleanup {
        cleanup
    } -match glob -result {*{::projectlib::bean <Monitor>}*}

    test TACTIC:MOBILIZE-2.3 {undo notifier event} -setup {
        setup
        ted order TACTIC:MOBILIZE tactic_id [$T1 id] personnel 100
    } -body {
        ted notifier bind ::projectlib::bean <Monitor>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -match glob -result {*{::projectlib::bean <Monitor>}*}
 

    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::athena_test::tests::








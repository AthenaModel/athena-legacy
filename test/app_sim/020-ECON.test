    test SAM:GLOBAL-2.1 {valid order} -setup {
        setup
    } -body {
        ted order ECON:SAM:GLOBAL id BaseUR val 10
    } -cleanup {
        cleanup
    } -result {}

    test SAM:GLOBAL-2.2 {monitor cell update event} -setup {
        setup
    } -body {
        ted notifier bind ::econ <SamUpdate>

    } -body {
        set undo [frcgroup mutate create [ted entity BLUE]]

        namespace eval :: $undo
        rdb eval {SELECT n,g FROM defroe_ng ORDER BY n,g}
    } -cleanup {
        cleanup
    } -result {}


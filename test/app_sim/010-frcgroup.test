    } -result {NB1 BLUE}

    test create-3.2 {undo deletes the personnel_ng records} -setup {
        ted create NB1
    } -body {
        set undo [frcgroup mutate create [ted entity BLUE]]

        namespace eval :: $undo
        rdb eval {SELECT n,g FROM personnel_ng ORDER BY n,g}
    } -cleanup {
        cleanup
    } -result {}

    test create-4.1 {defroe_ng curves are created for uniformed} -setup {
        ted create NB1 ALQ
    } -body {
        frcgroup mutate create [ted entity BLUE]
        rdb eval {SELECT n,g FROM defroe_ng ORDER BY n,g}
    } -cleanup {
        cleanup
    } -result {NB1 BLUE}

    test create-3.2 {undo deletes the personnel_ng records} -setup {

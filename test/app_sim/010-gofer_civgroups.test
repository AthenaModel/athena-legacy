# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    010-gofer_civgroups.test
#
# AUTHOR:
#    Will Duquette
#
# DESCRIPTION:
#    civgroup(sim) tests.
#
#    This test suite tests the gofer::CIVGROUPS type.
#
#    NOTE: The type itself is implemented using gofer(n); thus,
#    we don't need to test the behavior of the type itself.  As a result,
#    this test suite focusses on the gofer::CIVGROUPS-specific rule
#    objects.
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.
namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    proc setup {} {
        ted create JOE BOB BLUE SHIA SUNN KURD
    }

    proc cleanup {} {
        # Clean up the test environment
        array unset parms
        ted cleanup
    }

    #-------------------------------------------------------------------
    # Helper: validateAnyAllAlist

    test validateAnyAllAlist-3.1 {validate, valid} -setup {
        setup
    } -body {
        ::gofer::CIVGROUPS::validateAnyAllAlist {anyall any alist {JOE BOB}}
    } -cleanup {
        cleanup
    } -result {anyall ANY alist {JOE BOB}}

    test validateAnyAllAlist-3.2 {validate, invalid anyall} -setup {
        setup
    } -body {
        ::gofer::CIVGROUPS::validateAnyAllAlist {anyall NONESUCH alist JOE}
    } -returnCodes {
        error
    } -cleanup {
        cleanup
    } -match glob -result {invalid value "NONESUCH", should be one of: ANY, ALL}

    test validateAnyAllAlist-3.3 {validate, invalid alist} -setup {
        setup
    } -body {
        ::gofer::CIVGROUPS::validateAnyAllAlist {anyall ANY alist {JOE NONESUCH}}
    } -returnCodes {
        error
    } -cleanup {
        cleanup
    } -match glob -result {Invalid actor*}

    #-------------------------------------------------------------------
    # helper: narrativeAnyAllAlist
    

    test narrativeAnyAllAlist-4.1 {narrative, one actor} -body {
        ::gofer::CIVGROUPS::narrativeAnyAllAlist {anyall ANY alist JOE}
    } -result {actor JOE}

    test narrativeAnyAllAlist-4.2 {narrative, any, several actors} -body {
        ::gofer::CIVGROUPS::narrativeAnyAllAlist {
            anyall ANY
            alist {JOE BOB}
        }
    } -result {any of these actors (JOE, BOB)}
    
    test narrativeAnyAllAlist-4.3 {narrative, all, several actors} -body {
        ::gofer::CIVGROUPS::narrativeAnyAllAlist {
            anyall ALL
            alist {JOE BOB}
        }
    } -result {all of these actors (JOE, BOB)}

    test narrativeAnyAllAlist-4.4 {narrative, -brief} -body {
        ::gofer::CIVGROUPS::narrativeAnyAllAlist {
            anyall ANY
            alist {A B C D E F G H I J}
        } -brief
    } -result {any of these actors (A, B, C, D, E, F, G, H, ...)}



    #-------------------------------------------------------------------
    # Rule: BY_VALUE

    test BY_VALUE-1.1 {construct, valid} -setup {
        setup
    } -body {
        ::gofer::CIVGROUPS::BY_VALUE construct {SUNN SHIA}
    } -cleanup {
        cleanup
    } -result {raw_value {SUNN SHIA}}

    test BY_VALUE-2.1 {validate, valid} -setup {
        setup
    } -body {
        ::gofer::CIVGROUPS::BY_VALUE validate {raw_value {SUNN SHIA}}
    } -cleanup {
        cleanup
    } -result {raw_value {SUNN SHIA}}

    test BY_VALUE-2.2 {validate, invalid} -setup {
        setup
    } -body {
        ::gofer::CIVGROUPS::BY_VALUE validate {raw_value {SUNN NONESUCH}}
    } -returnCodes {
        error
    } -cleanup {
        cleanup
    } -match glob -result {Invalid civilian group*}

    test BY_VALUE-3.1 {narrative} -body {
        ::gofer::CIVGROUPS::BY_VALUE narrative {raw_value SUNN}
    } -result {group SUNN}

    test BY_VALUE-4.1 {eval} -setup {
        setup
    } -body {
        ::gofer::CIVGROUPS::BY_VALUE eval {raw_value {SUNN SHIA}}
    } -cleanup {
        cleanup
    } -result {SUNN SHIA}


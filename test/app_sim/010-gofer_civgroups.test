    #-------------------------------------------------------------------
    # Rule: SUPPORTING_ACTOR

    proc setupSupportingActor {} {
        setup
        rdb eval {
            INSERT INTO support_nga(n,g,a,support)
            VALUES('NB1','SHIA','BOB',0.3);

            INSERT INTO support_nga(n,g,a,support)
            VALUES('NB1','SHIA','JOE',0.3);

            INSERT INTO support_nga(n,g,a,support)
            VALUES('NB1','SUNN','BOB',0.3);

            INSERT INTO support_nga(n,g,a,support)
            VALUES('NB1','SUNN','JOE',0.0);

            INSERT INTO support_nga(n,g,a,support)
            VALUES('NB1','KURD','BOB',0.0);

            INSERT INTO support_nga(n,g,a,support)
            VALUES('NB1','KURD','JOE',0.3);
        }
    }

    test SUPPORTING_ACTOR-1.1 {construct} -setup {
        setup
    } -body {
        ::gofer::CIVGROUPS::SUPPORTING_ACTOR construct any {JOE BOB}
    } -cleanup {
        cleanup
    } -result {anyall ANY alist {JOE BOB}}

    test SUPPORTING_ACTOR-2.1 {validate} -setup {
        setup
    } -body {
        ::gofer::CIVGROUPS::SUPPORTING_ACTOR validate {anyall any alist {JOE BOB}}
    } -cleanup {
        cleanup
    } -result {anyall ANY alist {JOE BOB}}

    test SUPPORTING_ACTOR-3.1 {narrative} -body {
        ::gofer::CIVGROUPS::SUPPORTING_ACTOR narrative {anyall ANY alist JOE}
    } -match glob -result {civilian groups that actively support *}

    test SUPPORTING_ACTOR-4.1 {eval, one} -setup {
        setupSupportingActor
    } -body {
        ::gofer::CIVGROUPS::SUPPORTING_ACTOR eval {anyall ANY alist BOB}
    } -cleanup {
        cleanup
    } -result {SHIA SUNN}

    test SUPPORTING_ACTOR-4.2 {eval, any of two} -setup {
        setupSupportingActor
    } -body {
        ::gofer::CIVGROUPS::SUPPORTING_ACTOR eval {anyall ANY alist {BOB JOE}}
    } -cleanup {
        cleanup
    } -result {KURD SHIA SUNN}

    test SUPPORTING_ACTOR-4.3 {eval, all of two} -setup {
        setupSupportingActor
    } -body {
        ::gofer::CIVGROUPS::SUPPORTING_ACTOR eval {anyall ALL alist {BOB JOE}}
    } -cleanup {
        cleanup
    } -result {SHIA}

    #-------------------------------------------------------------------
    # Rule: LIKING_ACTOR

    proc setupLikingActor {} {
        setup
        ted lock
        aram vrel bset 1 SHIA BOB  0.3
        aram vrel bset 1 SHIA JOE  0.3
        aram vrel bset 1 SUNN BOB  0.3
        aram vrel bset 1 SUNN JOE  0.0
        aram vrel bset 1 KURD BOB  0.0
        aram vrel bset 1 KURD JOE  0.3
        ted step
    }

    test LIKING_ACTOR-1.1 {construct} -setup {
        setup
    } -body {
        ::gofer::CIVGROUPS::LIKING_ACTOR construct any {JOE BOB}

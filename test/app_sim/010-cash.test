    #-------------------------------------------------------------------
    # give

    test give-1.1 {Gives cash to actor for later use.} -setup {
        setup
        cash load
    } -body {
        cash give JOE 2000.0
        cash give BOB 5000.0
        ted query {SELECT * FROM working_cash}
    } -cleanup {

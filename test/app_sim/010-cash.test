    } -body {
        cash spendon JOE 1.0 {goods 1}
    } -cleanup {
        cleanup
    } -result {1}

    test spendon-1.3 {Money is spent} -setup {
        setup
        cash load
    } -body {
        cash spendon JOE 1000 {goods 1}
        ted query {SELECT * FROM working_cash}
    } -cleanup {
        cleanup
    } -result {
a   cash_reserve income  cash_on_hand gifts 
--- ------------ ------- ------------ ----- 
JOE 200000.0     10000.0 9000.0       0.0   

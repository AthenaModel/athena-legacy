# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    020-RELATIONSHIP.test
#
# AUTHOR:
#    Will Duquette
#
# DESCRIPTION:
#    app_sim(1) REL:* order tests.
#
#    This test suite tests the relationship-related orders.
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    proc setup {} {
        ted create BLUE SHIA SUNN
    }


    # Clean up after a test

    proc cleanup {} {
        ted cleanup
    }

    #-------------------------------------------------------------------
    # REL:CREATE

    test CREATE-1.1 {required parms} -body {
        ted order -reject REL:CREATE {}
    } -result {
        id {required value}
    }

    test CREATE-1.2 {Invalid f in id} -setup {
        setup
    } -body {
        ted order -reject REL:CREATE {id {NONESUCH SHIA} rel 0.5}
    } -cleanup {
        cleanup
    } -result {
        id {Invalid group, should be one of: BLUE, SHIA, SUNN}
    }

    test CREATE-1.3 {Invalid g in id} -setup {
        setup
    } -body {
        ted order -reject REL:CREATE {id {SHIA NONESUCH} rel 0.5}
    } -cleanup {
        cleanup
    } -result {
        id {Invalid group, should be one of: BLUE, SHIA, SUNN}
    }

    test CREATE-1.4 {Override exists} -setup {
        setup
        rel mutate create {id {SHIA SUNN} rel 0.5}
    } -body {
        ted order -reject REL:CREATE {id {SHIA SUNN} rel 0.5}
    } -cleanup {
        cleanup
    } -result {
        id {Override already exists on relationship between groups SHIA and SUNN}
    }

    test CREATE-1.5 {f eq g} -setup {
        setup
    } -body {
        ted order -reject REL:CREATE {id {SHIA SHIA} rel 0.5}
    } -cleanup {
        cleanup
    } -result {
        id {Cannot override a group's relationship with itself.}
    }

    test CREATE-1.6 {Invalid rel} -setup {
        setup
    } -body {
        ted order -reject REL:CREATE {id {SHIA SUNN} rel NONESUCH}
    } -cleanup {
        cleanup
    } -result {
        rel {invalid value "NONESUCH", should be a real number in range -1.0, 1.0, or one of: FRIEND, NEUTRAL, ENEMY}
    }

    test CREATE-2.1 {Override is created} -setup {
        setup
    } -body {
        ted order REL:CREATE {id {SHIA SUNN} rel 0.5}
        ted query {SELECT * FROM rel_fg}
    } -cleanup {
        cleanup
    } -result {
f    g    rel 
---- ---- --- 
SHIA SUNN 0.5 
    }

    test CREATE-2.2 {Rel defaults to 0.0} -setup {
        setup
    } -body {
        ted order REL:CREATE {id {SHIA SUNN}}
        ted query {SELECT * FROM rel_fg}
    } -cleanup {
        cleanup
    } -result {
f    g    rel 
---- ---- --- 
SHIA SUNN 0.0 
    }

    test CREATE-2.3 {Effects} -setup {
        setup
    } -body {
        ted notifier bind ::rdb <rel_fg>
        ted order REL:CREATE {id {SHIA SUNN}}
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <rel_fg> update {SHIA SUNN}}
    }

    test CREATE-3.1 {effects are undone} -setup {
        setup
        ted order REL:CREATE {id {SHIA SUNN}}
    } -body {
        ted notifier bind ::rdb <rel_fg>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <rel_fg> delete {SHIA SUNN}}
    }

    #-------------------------------------------------------------------
    # REL:DELETE

    test DELETE-1.1 {required parms} -body {
        ted order -reject REL:DELETE {}
    } -result {
        id {required value}
    }
    

    test DELETE-1.2 {unknown f in id} -setup {
        setup
    } -body {
        ted order -reject REL:DELETE id {NONESUCH SUNN}
    } -cleanup {
        cleanup
    } -result {
        id {Invalid group, should be one of: BLUE, SHIA, SUNN}
    }

    test DELETE-1.3 {unknown g in id} -setup {
        setup
    } -body {
        ted order -reject REL:DELETE id {SHIA NONESUCH}
    } -cleanup {
        cleanup
    } -result {
        id {Invalid group, should be one of: BLUE, SHIA, SUNN}
    }

    test DELETE-1.4 {no such override} -setup {
        setup
    } -body {
        ted order -reject REL:DELETE id {SHIA SUNN}
    } -cleanup {
        cleanup
    } -result {
        id {There is no manual override on the relationship between groups SHIA and SUNN.}
    }

    test DELETE-2.1 {Effects} -setup {
        setup
        ted order REL:CREATE {id {SHIA SUNN}}
    } -body {
        ted notifier bind ::rdb <rel_fg>
        ted order REL:DELETE id {SHIA SUNN}
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <rel_fg> delete {SHIA SUNN}}
    }


    test DELETE-3.1 {Effects on undo} -setup {
        setup
        ted order REL:CREATE {id {SHIA SUNN}}
        ted order REL:DELETE {id {SHIA SUNN}}
    } -body {
        ted notifier bind ::rdb <rel_fg>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <rel_fg> update {SHIA SUNN}}
    }

    #-------------------------------------------------------------------
    # REL:UPDATE

    test UPDATE-1.1 {required parms} -body {
        ted order -reject REL:UPDATE {}
    } -result {
        id {required value}
    }
    

    test UPDATE-1.2 {invalid f, g} -setup {
        setup
    } -body {
        ted order -reject REL:UPDATE id {NONESUCH NONESUCH}
    } -cleanup {
        cleanup
    } -result {
        id {Invalid group, should be one of: BLUE, SHIA, SUNN}
    }


    test UPDATE-1.3 {no such override} -setup {
        setup
    } -body {
        ted order -reject REL:UPDATE id {SHIA BLUE} rel 1.0
    } -cleanup {
        cleanup
    } -result {
        id {There is no manual override on the relationship between groups SHIA and BLUE.}
    }


    test UPDATE-1.4 {invalid rel: out of range} -setup {
        setup
        ted order REL:CREATE {id {SHIA SUNN}}
    } -body {
        ted order -reject REL:UPDATE id {SHIA SUNN} rel 1.1
    } -cleanup {
        cleanup
    } -result {
        rel {invalid value "1.1", should be a real number in range -1.0, 1.0, or one of: FRIEND, NEUTRAL, ENEMY}
    }


    test UPDATE-2.1 {rel is updated} -setup {
        setup
        ted order REL:CREATE {id {SHIA BLUE}}
    } -body {
        ted order REL:UPDATE {
            id    {SHIA BLUE}
            rel   0.5
        }

        ted query {SELECT * FROM rel_fg ORDER BY f,g}
    } -cleanup {
        cleanup
    } -result {
f    g    rel 
---- ---- --- 
SHIA BLUE 0.5 
    }


    test UPDATE-2.2 {table monitor event} -setup {
        setup
        ted order REL:CREATE {id {SHIA BLUE}}
    } -body {
        ted notifier bind ::rdb <rel_fg>
        ted order REL:UPDATE id {SHIA BLUE} rel 0.5
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <rel_fg> update {SHIA BLUE}}
    }


    test UPDATE-3.1 {undo undoes the change} -setup {
        setup

        ted order REL:CREATE {id {SHIA BLUE}}
        ted order REL:UPDATE {
            id    {SHIA BLUE}
            rel   0.5
        }
    } -body {
        ted notifier bind ::rdb <rel_fg>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <rel_fg> update {SHIA BLUE}}
    }

    #-------------------------------------------------------------------
    # REL:UPDATE:MULTI

    test UPDATE:MULTI-1.1 {required parms} -setup {
        setup
    } -body {
        ted order -reject REL:UPDATE:MULTI {}
    } -cleanup {
        cleanup
    } -result {
        ids {required value}
    }
    

    test UPDATE:MULTI-1.2 {invalid f in ids} -setup {
        setup
    } -body {
        ted order -reject REL:UPDATE:MULTI \
            ids {{NONESUCH BLUE}}
    } -cleanup {
        cleanup
    } -result {
        ids {Invalid group, should be one of: BLUE, SHIA, SUNN}
    }


    test UPDATE:MULTI-1.3 {invalid g in ids} -setup {
        setup
    } -body {
        ted order -reject REL:UPDATE:MULTI \
            ids {{SHIA NONESUCH}}
    } -cleanup {
        cleanup
    } -result {
        ids {Invalid group, should be one of: BLUE, SHIA, SUNN}
    }


    test UPDATE:MULTI-1.4 {no such override in ids} -setup {
        setup
    } -body {
        ted order -reject REL:UPDATE:MULTI \
            ids {{SHIA SUNN}}
    } -cleanup {
        cleanup
    } -result {
        ids {There is no manual override on the relationship between groups SHIA and SUNN.}
    }


    test UPDATE:MULTI-1.5 {invalid rel: out of range} -setup {
        setup
        ted order REL:CREATE {id {SHIA BLUE}}
    } -body {
        ted order -reject REL:UPDATE:MULTI \
            ids {{SHIA BLUE}} rel 1.1
    } -cleanup {
        cleanup
    } -result {
        rel {invalid value "1.1", should be a real number in range -1.0, 1.0, or one of: FRIEND, NEUTRAL, ENEMY}
    }


    test UPDATE:MULTI-2.1 {one relationship of several is updated} -setup {
        setup
        ted order REL:CREATE {id {SHIA SUNN}}
        ted order REL:CREATE {id {SHIA BLUE}}
    } -body {
        ted notifier bind ::rdb <rel_fg>

        ted order REL:UPDATE:MULTI {
            ids       {{SHIA BLUE}}
            rel       0.5
        }

        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <rel_fg> update {SHIA BLUE}}
    }


    test UPDATE:MULTI-2.2 {several relationships are updated} -setup {
        setup
        ted order REL:CREATE {id {SHIA SUNN}}
        ted order REL:CREATE {id {SHIA BLUE}}
    } -body {
        ted notifier bind ::rdb <rel_fg>
        ted order REL:UPDATE:MULTI {
            ids   {{SHIA BLUE} {SHIA SUNN}} 
            rel   0.5
        }
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <rel_fg> update {SHIA BLUE}}
        {::rdb <rel_fg> update {SHIA SUNN}}
    }


    test UPDATE:MULTI-3.1 {undo undoes the change} -setup {
        setup
        ted order REL:CREATE {id {SHIA SUNN}}
        ted order REL:CREATE {id {SHIA BLUE}}

        ted order REL:UPDATE:MULTI {
            ids        {{SHIA BLUE} {SHIA SUNN}}
            rel        0.5
        }
    } -body {
        ted notifier bind ::rdb <rel_fg>
        cif undo -test
        ted notifier received
    } -cleanup {
        cleanup
    } -result {
        {::rdb <rel_fg> update {SHIA BLUE}}
        {::rdb <rel_fg> update {SHIA SUNN}}
    }


    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::athena_test::tests::








